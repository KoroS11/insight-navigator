# =============================================================================
# NSA-X Backend Environment Variables
# =============================================================================
# Copy this file to .env and customize for your environment
# WARNING: Never commit .env files with real secrets to version control!
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (recommended for local development - no setup required)
DATABASE_URL=sqlite+aiosqlite:///./nsax_dev.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://nsax_user:nsax_password@localhost:5432/nsax_db
# DATABASE_URL_SYNC=postgresql://nsax_user:nsax_password@localhost:5432/nsax_db

# =============================================================================
# Redis (Optional - for caching/sessions)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# JWT Authentication
# =============================================================================
# IMPORTANT: Generate a strong secret for production: openssl rand -hex 32
# For local development, this default is acceptable
JWT_SECRET_KEY=dev-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# API Settings
# =============================================================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=NSA-X
DEBUG=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# Default Admin User
# =============================================================================
# These credentials are used to create the initial admin user on startup
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
